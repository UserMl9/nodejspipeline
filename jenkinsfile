node {
    def gitcommit
    stage('Verification SCM') {
        checkout scm
        sh "git rev-parse --short HEAD > .git/commit-id"
        gitcommit = readFile('.git/commit-id').trim()
    }
    stage('Test') {
        nodejs(nodeJSInstallationName: 'nodejs') {
            sh 'npm install --only=development' // Actualización a una opción válida
            sh 'npm test'
        }
    }
    stage('Docker Build & Push') {
        withCredentials([string(credentialsId: 'docker-hub-credentials-id', variable: 'DOCKER_HUB_PASSWORD')]) {
            sh "echo $DOCKER_HUB_PASSWORD | docker login -u aprendizajeml9 --password-stdin https://registry.hub.docker.com"
            docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials-id') {
                def ourapp = docker.build("aprendizajeml9/nodejsapp:${gitcommit}", ".")
                ourapp.push()
            }
        }
    }
}
